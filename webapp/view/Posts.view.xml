<mvc:View
    controllerName="projectui5.controller.Posts"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.ui.table"
    xmlns:m="sap.m">
    
    <m:Page title="Posts" class="sapUiContentPadding sapUiSmallMarginBegin sapMTitle">
    
        <m:content>
            <!-- Posts Table -->
            <Table
                id="postsTable"
                rows="{posts>/}"
                rowMode="Fixed"
                selectionMode="None"
                enableColumnReordering="false"
                class="sapUiResponsiveMargin">
                
                <columns>
                    <Column width="100px">
                        <label>
                            <m:Label text="ID" />
                        </label>
                        <template>
                            <m:Text text="{posts>id}" />
                        </template>
                    </Column>
                    <Column>
                        <label>
                            <m:Label text="Title" />
                        </label>
                        <template>
                            <m:Text text="{posts>title}" />
                        </template>
                    </Column>
                    <Column>
                        <label>
                            <m:Label text="Body" />
                        </label>
                        <template>
                            <m:Text text="{posts>body}" />
                        </template>
                    </Column>
                    <Column>
                        <label>
                            <m:Label text="Actions" />
                        </label>
                        <template>
                            <m:Button 
                                text="Show Comments" 
                                press="onToggleComments" 
                                class="sapMBtn sapMBtnBase"/>
                        </template>
                    </Column>
                </columns>
            </Table>

            <!-- Comments Table -->
            <Table
                id="commentsTable"
                rows="{comments>/}"
                rowMode="Fixed"
                visible="false"
                selectionMode="None"
                class="sapUiResponsiveMargin">
                
                <columns>
                    <Column>
                        <label>
                            <m:Label text="Name" />
                        </label>
                        <template>
                            <m:Text text="{comments>name}" />
                        </template>
                    </Column>
                    <Column>
                        <label>
                            <m:Label text="Comment" />
                        </label>
                        <template>
                            <m:Text text="{comments>body}" />
                        </template>
                    </Column>
                    <Column>
                        <label>
                            <m:Label text="Email" />
                        </label>
                        <template>
                            <m:Text text="{comments>email}" />
                        </template>
                    </Column>
                </columns>
            </Table>

        </m:content>
    </m:Page>

</mvc:View>
