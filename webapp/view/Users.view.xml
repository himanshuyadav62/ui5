<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    controllerName="pscreen.controller.User"
    xmlns:core="sap.ui.core">

    <!-- Title -->
    <Page title="User Data Table">
        <content>
            <!-- Table to Display Data -->
            <Table id="userDataTable" items="{/data}">
                <columns>
                    <Column>
                        <Text text="User ID" />
                    </Column>
                    <Column>
                        <Text text="Username" />
                    </Column>
                    <Column>
                        <Text text="Email" />
                    </Column>
                    <Column>
                        <Text text="Role" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{user_id}" />
                            <Text text="{username}" />
                            <Text text="{email}" />
                            <Text text="{role}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
