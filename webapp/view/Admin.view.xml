<mvc:View
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:dnd="sap.ui.core.dnd"
  controllerName="pscreen.controller.Admin">
  <VBox>
    <Table
      id="settingsTable"
      items="{/}"
      growing="true"
      growingThreshold="10">
      <dragDropConfig>
        <dnd:DragDropInfo
          sourceAggregation="items"
          targetAggregation="items"
          dropPosition="Between"
          drop="onReorderItems" />
      </dragDropConfig>
      <columns>
        <Column><Label text="Label" /></Column>
        <Column><Label text="Property" /></Column>
        <Column><Label text="Width" /></Column>
        <Column><Label text="Visible" /></Column>
      </columns>
      <items>
        <ColumnListItem>
          <cells>
            <Input value="{label}" liveChange="onLabelEdit" />
            <Text text="{property}" />
            <Input value="{width}" liveChange="onWidthEdit" />
            <Switch state="{visible}" change="onVisibilityChange" />
          </cells>
        </ColumnListItem>
      </items>
    </Table>
    <Button text="Save Settings" press="onSaveSettings" />
  </VBox>
</mvc:View>
