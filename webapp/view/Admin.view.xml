<mvc:View
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  controllerName="pscreen.controller.Admin">
  <VBox>
    <Table id="settingsTable" items="{/}">
      <columns>
        <Column><Label text="Label" /></Column>
        <Column><Label text="Property" /></Column>
        <Column><Label text="Visible" /></Column>
      </columns>
      <items>
        <ColumnListItem>
          <cells>
            <Input value="{label}" />
            <Input value="{property}" />
            <Switch state="{visible}" />
          </cells>
        </ColumnListItem>
      </items>
    </Table>
    <Button text="Save Settings" press="onSaveSettings" />
  </VBox>
</mvc:View>
