<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:table="sap.ui.table"
    xmlns:m="sap.m"
    controllerName="pscreen.controller.Admin">

    <m:Page title="Admin - Column Settings">
        <m:content>
            <!-- Placeholder for the table -->
            <m:VBox>
                <table:Table id="adminTable" rows="{/columns}">
                </table:Table>
                <!-- Save Button -->
                <m:Button text="Save Changes" press="onSaveSettings" />
            </m:VBox>
        </m:content>
    </m:Page>
</mvc:View>
